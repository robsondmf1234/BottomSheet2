<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bottomSheet"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorWhite"
  android:orientation="vertical"
  app:behavior_hideable="true"
  app:behavior_peekHeight="?attr/actionBarSize"
  app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:text="New"
    android:textColor="@color/colorBlack"
    android:textSize="28sp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/share"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_share_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Share"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
      android:id="@+id/link"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_link_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Link"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
      android:id="@+id/copy"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_file_copy_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Copy"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/adb"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_adb_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adb"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
      android:id="@+id/wifi"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_signal_wifi_4_bar_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wifi"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
      android:id="@+id/tag"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_margin="18dp"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_baseline_tag_faces_24"
        app:tint="@color/colorGreyIcon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tag"
        android:textColor="@color/colorGreyIcon"
        android:textSize="16dp" />


    </LinearLayout>

  </LinearLayout>


</LinearLayout>